{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": { "ecmaVersion": 2021, "sourceType": "module" },
  "rules": {
    "no-var": "error",
    "prefer-const": "error",
    "eqeqeq": ["error", "always"],
    "no-unused-vars": ["warn", { "args": "none", "ignoreRestSiblings": true }]
  },
  "ignorePatterns": ["server-worker/**", "**/dist/**"]
}
